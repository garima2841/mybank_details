<core:FragmentDefinition xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Dialog id="moreBankDetails" title="Confidential Details">
        <VBox id="vBox1" class="sapUiSmallMargin">
            <HBox id="hBox1">
                <Label text="Bank Account Number:" id="bankAccNum" class="sapUiSmallMarginEnd" />
                <Text text="388473*******" id="bankAccVal" class="sapUiSmallMarginBegin"/>
            </HBox>
            <HBox id="hBox2">
                <Label text="Account Holder Name:" id="lblAcHolderNameId" class="sapUiSmallMarginEnd" />
                <Text text="Garima Singh" id="idAcHolderNameValue" class="sapUiSmallMarginBegin"/>
            </HBox>
            <HBox id="hBox3">
                <Label text="IFSC Code: " id="lblIFSCId" class="sapUiSmallMarginEnd" />
                <Text text="000000*******" id="idIFSCValue" class="sapUiSmallMarginBegin"/>
            </HBox>
            <HBox id="hBox4">
                <Label text="Customer ID: " id="lblCustId" class="sapUiSmallMarginEnd" />
                <Text text="1234*****" id="idCustValue" class="sapUiSmallMarginBegin"/>
            </HBox>
            <HBox id="hBox5">
                <Label text="Address: " id="lblAddressId" class="sapUiSmallMarginEnd" />
                <Text text="**/**********" id="idAddressValue" class="sapUiSmallMarginBegin"/>
            </HBox>


        </VBox>
        <beginButton>
            <Button icon="sap-icon://decline" id="onCloseBtn" press="onCloseDialog" text="Close" />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>